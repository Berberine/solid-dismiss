{
  "name": "solid-dismiss",
  "version": "1.0.0",
  "homepage": "https://aquaductape.github.io/solid-dismiss/",
  "description": "Handles \"click outside\" behavior for popup menu. Closing is triggered by click/focus outside of popup element or pressing \"Escape\" key.",
  "license": "MIT",
  "author": "aquaductape",
  "keywords": [
    "dismiss",
    "light dismiss",
    "popup",
    "popups",
    "popup menu",
    "popup dropdown",
    "popover",
    "focusout",
    "click outside",
    "solid"
  ],
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "dist/esm/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "solid": "./dist/source/index.jsx",
      "default": "./dist/esm/index.js"
    }
  },
  "scripts": {
    "build": "rollup -c",
    "prepublishOnly": "npm run build",
    "release": "release-it",
    "start": "vite",
    "dev": "vite",
    "demo-build": "vite build",
    "demo-serve": "vite preview",
    "demo-deploy": "./deploy.sh",
    "demo-quick": "git add . && git commit -m 'update' && pnpm demo-deploy"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aquaductape/solid-dismiss.git"
  },
  "devDependencies": {
    "vite": "^2.4.2",
    "vite-plugin-solid": "^2.0.1",
    "rollup": "^2.28.2",
    "rollup-preset-solid": "^0.3.0",
    "@release-it/keep-a-changelog": "^2.3.0",
    "prettier": "^2.3.1",
    "release-it": "^14.10.0"
  },
  "dependencies": {
    "@amoutonbrady/solid-heroicons": "^0.8.0",
    "@types/prismjs": "^1.16.6",
    "focus-visible": "^5.2.0",
    "prismjs": "^1.24.1",
    "sass": "^1.38.0",
    "simplebar": "^5.3.5",
    "solid-js": "^1.0.7",
    "solid-transition-group": "^0.0.8"
  }
